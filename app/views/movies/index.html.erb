<% if !user_signed_in? %>
<div class="jumbotron" align="center">
  <h2> Movie Reviews and Ratings in the Box Office </h2>
  <p>Current movie reviews and ratings from critics on all of the latest movies.</p>
  <p><%= link_to "Sign up and write a Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
</div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
    </div>
  </div>
  <% end %>
</div>